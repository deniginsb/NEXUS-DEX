{
  "name": "@se-2/hardhat",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "generate": "hardhat run scripts/generateAccount.ts",
    "account:generate": "hardhat run scripts/generateAccount.ts",
    "account:private-key": "hardhat run scripts/generateAccount.ts --private-key",
    "account:reveal-pk": "hardhat run scripts/generateAccount.ts --reveal",
    "chain": "hardhat node",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:verbose": "yarn deploy --network nexus --verbose",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network nexus",
    "fork": "hardhat node --fork https://testnet.rpc.nexus.xyz",
    "flatten": "hardhat flatten",
    "format": "prettier --write .",
    "lint": "prettier --write . && solhint 'contracts/**/*.sol'",
    "lint-staged": "lint-staged",
    "verify": "hardhat run scripts/deploy.ts --network nexus && hardhat verify --network nexus"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.22.1",
    "hardhat-deploy": "^0.11.45"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.11.30",
    "chai": "^4.4.1",
    "dotenv": "^17.2.3",
    "ethers": "^6.11.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.3.2",
    "solhint": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.4.5"
  }
}
